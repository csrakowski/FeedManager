@page "/"
@using System.ServiceModel.Syndication;

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16">
    <MudText Typo=Typo.h4 Class="pb-4">My Feed</MudText>
    <MudSpacer />

    <MudGrid>
        <MudButton ButtonType="ButtonType.Button" OnClick="@Refresh">Refresh</MudButton>
        <MudItem xs="12" md="8">
            <MudStack Spacing="8">
                @foreach (var item in _feedItems ?? new List<FeedItem>())
                {
                    <SyndicationFeedItem FeedItem=@item
                                         OnRead=@OnMarkAsRead />
                }
                <MudDivider />
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>