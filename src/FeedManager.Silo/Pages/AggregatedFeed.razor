@page "/cart"
@using System.ServiceModel.Syndication;

<MudToolBar DisableGutters="true">
    <MudText Typo="Typo.h4">My Feed</MudText>
    <MudSpacer />
</MudToolBar>

<MudGrid>
    <MudItem xs="12" md="8">
        <MudStack Spacing="8">
            @foreach (var item in _feedItems ?? new List<FeedItem>())
            {
                <SyndicationFeedItem FeedItem=@item
                    OnRead=@OnMarkAsRead />
            }
            <MudDivider/>
        </MudStack>
    </MudItem>
</MudGrid>
